<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

    <TextView
            android:text="Exercise"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/textviewExercise"
            android:layout_marginBottom="12dp" />

    <TextView
            android:text="Plan"
            android:textStyle="bold" />

    <Spinner
            android:id="@+id/spinnerPlan"
            android:layout_marginBottom="12dp" />

    <TextView
            android:text="Workout Date"
            android:textStyle="bold" />

    <EditText
            android:id="@+id/editDate"
            android:layout_marginBottom="12dp"
            android:focusable="false"
            android:clickable="true"
            android:hint="Select date" />

    <EditText
            android:id="@+id/editSets"
            android:hint="Number of sets"
            android:inputType="number" />

    <EditText
            android:id="@+id/editReps"
            android:hint="Reps per set"
            android:inputType="number" />

    <EditText
            android:id="@+id/editVolume"
            android:hint="Volume (kg)"
            android:inputType="number" />

    <EditText
            android:id="@+id/editRestTime"
            android:hint="Rest time (seconds)"
            android:inputType="number" />
</LinearLayout>