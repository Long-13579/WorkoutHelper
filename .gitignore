# ===== Android / IntelliJ / Gradle gitignore =====

# Built application files
*.apk
*.ap_
*.aab

# ART/Dalvik VM files
*.dex

# Java class files
*.class

# Generated files
bin/
gen/
out/
build/

# Gradle files
.gradle/
**/build/
!gradle/wrapper/gradle-wrapper.jar
.gradle-cache/
.gradle-build/
.gradle-test/

# Local configuration (do not share SDK paths)
local.properties

# Log files
*.log

# Android Studio
.idea/
*.iml
*.ipr
*.iws
.idea/caches/
.idea/libraries/
.idea/modules.xml
.idea/workspace.xml
.idea/navEditor.xml
.idea/assetWizardSettings.xml

# Keystore files (keep these private!)
*.jks
*.keystore

# Misc
.DS_Store
Thumbs.db
*.swp
*.swo

# NDK
obj/

# Google Services
google-services.json
# (optional) Firebase config for iOS
GoogleService-Info.plist

# Generated by lint or other tools
lint/intermediates/
lint/generated/
lint/tmp/
lintReports/

# Gradle build cache
.cxx/
